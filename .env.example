# Environment Configuration
NODE_ENV=development

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api/v1

# Database Configuration
DATABASE_URL=postgresql://scout_user:scout_password@localhost:5432/scout_db
REDIS_URL=redis://localhost:6379

# Firestore Configuration (Optional - can use Azure SignalR)
# GOOGLE_APPLICATION_CREDENTIALS=./config/firestore-key.json
# FIREBASE_PROJECT_ID=scout-platform-dev

# AI Services - Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=scout-corporate-dna

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@scout-platform.com

# File Storage
AZURE_STORAGE_ACCOUNT=scoutplatformstorage
AZURE_STORAGE_KEY=your_azure_storage_key
AZURE_STORAGE_CONTAINER=uploads

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id

# Security
CORS_ORIGINS=http://localhost:3000,https://app.scout-platform.com
ALLOWED_HOSTS=localhost,127.0.0.1,scout-platform.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# WebRTC Configuration
TURN_SERVER_URL=turn:your-turn-server.com
TURN_USERNAME=your_turn_username
TURN_PASSWORD=your_turn_password

# Development
DEBUG=true
LOG_LEVEL=INFO

# Azure Deployment
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_RESOURCE_GROUP=scout-platform-rg
AZURE_LOCATION=eastus